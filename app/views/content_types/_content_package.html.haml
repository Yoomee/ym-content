%tr{:data => {:depth => 1}}
  %td.td-name
    %span.spacer{:class => "spacer-#{last ? 'last' : 'mid'}"}
    %span.name=content_package.name
  %td=link_to('View', content_package) unless content_package.viewless? || content_package.missing_view?
  %td=link_to('Edit', edit_content_package_path(content_package))
  %td=link_to('Reveal', content_packages_path(:open => content_package.id), :title => "Reveal this page in the sitemap")
  