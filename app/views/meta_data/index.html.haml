.container.cms-main#cms-style-container
  =render('content_packages/sitemap_header', header_title: 'Non CMS meta data')
  .row
    .tab-content.tab-content-sitemap.relative
      =link_if_can('Add new meta data', [:new, MetaDatum.new], :icon => 'plus', :class => 'new-content btn btn-success btn-small')
      #meta-datas.tab-pane.active
        =render 'meta_data/explanation'
        %table.table
          %thead
            %tr
              %th.col-md-2 Page slug
              %th.col-md-2 Title
              %th.col-md-2 Description
              %th.col-md-2 Keywords
              %th.col-md-2 Image
              %th{ colspan: 2 }

          %tbody
            -@meta_data.each do |meta_datum|
              %tr
                %td=meta_datum.page_slug
                %td=meta_datum.title
                %td=meta_datum.description
                %td=truncate(meta_datum.keywords)
                %td=image_for(meta_datum, '40x40#', class: 'ml-0') if meta_datum.image
                %td=link_if_can('View', meta_datum)
                %td=link_if_can('Edit', [:edit, meta_datum])
            %tr
              %td{:colspan => 8}
                =link_if_can('Add new meta data', [:new, MetaDatum.new], :icon => 'plus', :class => 'btn btn-success btn-small)
