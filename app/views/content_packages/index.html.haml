%h2.mb-3.pull-left=title 'Site map & content types'
=link_to('Add content type', new_content_type_path, :icon => 'plus', :class => 'btn btn-small pull-right mt-2 mr-1')
.clearfix
%ul.nav.nav-tabs.mb-2
  %li.active=link_to("Site map", '#site-map', 'data-toggle' => 'tab')
  %li=link_to("Content types", '#content-types', 'data-toggle' => 'tab')

.tab-content
  #site-map.tab-pane.active
    %table.table.table-striped
      %thead
        %th Name
        %th.col-md-3 Status
        %th{:colspan => 2} Actions
      %tbody
        -@content_packages.each do |content_package|
          =render('content_package', :content_package => content_package)
  #content-types.tab-pane
    %table.table.table-striped.table-content-types
      %thead
        %tr
          %th Content type / Name
          %th.col-md-3 Status
          %th{:colspan => 2} Actions
      %tbody
        -@content_types.each do |content_type|
          %tr.content-type
            %th{:colspan => 4}
              =content_type.to_s.pluralize
              .pull-right
                =link_to('Edit content type', edit_content_type_path(content_type), :icon => 'pencil', :class => 'btn btn-small')
                =link_to("Add #{content_type.package_name}", new_content_type_content_package_path(content_type), :icon => 'file-text-o', :class => 'btn btn-small btn-link')
          -content_type.content_packages.order(:slug).each do |content_package|
            %tr
              %td
                %i.fa.fa-file-text-o
                =content_package
              %td=status(content_package.status)
              %td
                =link_to('View', content_package)
              %td
                =link_to('Edit', edit_content_package_path(content_package))