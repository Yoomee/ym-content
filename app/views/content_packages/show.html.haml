%h3.pull-left=title(@content_package)
=link_to("Edit #{@content_package.package_name}", edit_content_package_path(@content_package), :icon => 'pencil', :class => 'btn btn-small pull-right')
.clearfix
%dl.dl-horizontal
  -@content_package.content_attributes.each do |attribute|
    %dt=attribute.name
    %dd
      -case attribute.field_type
      -when 'text'
        =simple_format(@content_package.send(attribute.slug))
      -else
        =@content_package.send(attribute.slug)