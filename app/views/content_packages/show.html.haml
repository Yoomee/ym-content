%h3=title(@content_package)
%table.table.table-striped
  %thead
    %tr
      %th Name
      %th Attribute
      %th Value
  %tbody
    -@content_package.content_attributes.each do |attribute|
      %tr
        %td.col-md-3=attribute.name
        %td="@content_package.#{attribute.slug}"
        %td
          -case attribute.field_type
          -when 'text'
            =simple_format(@content_package.send(attribute.slug))
          -else
            %p=@content_package.send(attribute.slug)
