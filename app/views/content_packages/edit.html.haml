.row
  .col-md-12
    %h3=title "Edit #{@content_package.package_name}"
.row
  .col-md-8
    =semantic_form_for @content_package, :html => {:class => 'form-horizontal'} do |form|
      =form.inputs do
        =form.input :content_type_id, :as => :hidden
        =form.input :slug
        =form.input :permalink_path
        %hr
        -@content_package.content_attributes.each do |content_attribute|
          =form.input content_attribute.slug, :as => content_attribute.field_type, :label => content_attribute.name, :hint => content_attribute.description
          %hr
      =form.actions do
        =form.action :submit, :label => "Update #{@content_package.package_name}"
  .col-md-4
    %ul.nav.nav-tabs
      %li.active=link_to("Context", '#context', 'data-toggle' => 'tab')
      %li=link_to("Discussion", '#discussion', 'data-toggle' => 'tab')
      %li=link_to("Activity", '#activity', 'data-toggle' => 'tab')
    .tab-content
      #context.tab-pane.active
        %h5 Audience/personas
        -@content_package.personas.each do |persona|
          .well.p-2
            .row.mb-2
              .col-sm-4
                =image_for(persona, '100x100#')
              .col-sm-8
                %h4=persona
                %h5="Age #{persona.age}"
            %p
              %em=persona.summary
            -if persona.benefits.present?
              %p
                %strong Fact checker benefits
              %ul
                -persona.benefits.each do |benefit|
                  %li=benefit
            -if persona.file
              =link_to("Download full persona", persona.file.url, :target => '_blank', :class => 'btn btn-small pull-right')
            .clearfix
        %h5 Content object/goal
        .well.p-2
          =simple_format(@content_package.notes)
      #discussion.tab-pane
      #activity.tab-pane